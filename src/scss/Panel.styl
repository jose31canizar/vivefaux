left-translate = -64vw

.panel
  background: white
  width: 10vw
  height: 10vw
  display: flex
  justify-content: center
  align-items: center
.panel.open
  animation: reveal 1s
  transform-origin: center left
  transform: translateX(left-translate) scaleY(4) scaleX(4)
  font-size: 0em
.panel.closed
  animation: unreveal 1s
  transform-origin: origin
  transform: translateX(0) scaleY(1)
  font-size: 1em
.left-pane
  width: 40vw
  img
    width: 100%
