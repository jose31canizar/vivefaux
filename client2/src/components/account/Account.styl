.account section.auth.container
  position relative
  display inline

  @media all and (max-width: 64rem)
    width 100%
    margin 2rem 0

.page .account
  display grid

  @media all and (max-width: 64rem)
    display flex

  grid-template-columns repeat(2, 1fr)
  grid-template-rows repeat(2, 1fr)

.account
  .account-profile
    display flex

    @media all and (max-width: 64rem)
      display block
      padding 1rem

    justify-content center
    align-items center
    padding 5rem
    flex-direction column

  input[type=file]
    display none

  .media-uploader-container
    padding 1rem
    margin 1rem
    cursor pointer

    label
      width 5rem
      padding 0.9rem 1.5rem
      background #6969984f

  .media-uploader-container:hover label
    background rgba(3, 3, 35, 0.55)
    color white

  .profile-picture-container
    width 5rem
    height 5rem
    border-radius 5rem
    background black
    margin-right 2rem
    position relative
    overflow hidden
    cursor pointer

    label
      width 5rem
      background #6969984f
      height 5rem
      display block
      position absolute
      border-radius 5rem
      top 0

    svg
      position absolute
      width 100%
      height 100%
      padding 1.5rem
      pointer-events none

      path
        fill white

  .profile-picture-container:hover label
    background rgba(255, 255, 255, 0.31)

  .profile-info
    flex 1

    h3
      margin 0

    h5
      margin-top 1rem