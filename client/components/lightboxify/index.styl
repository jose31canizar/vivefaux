.lightbox-modal
  position fixed
  z-index 3
  top 0
  left 0
  width 100%
  height 100vh
  background rgba(255, 255, 255, 0.5)
  display flex
  justify-content center
  align-items center
  cursor pointer

  img
    width 500px
    height 70vh
    object-fit contain
    user-select none

  .modal-item
    display flex
    justify-content center
    align-items center
    flex-direction column

  .close-button
    position absolute
    top 2rem
    left 1.5rem
    cursor pointer