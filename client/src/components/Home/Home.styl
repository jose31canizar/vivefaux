.page > div > div.home
  padding 5rem
  display grid
  grid-template-columns repeat(2, 1fr)
  align-items flex-start
  grid-auto-flow column
  overflow-x hidden

  @media all and (max-width: 64em)
    grid-template-columns repeat(1, 1fr)
    grid-auto-flow row
    overflow-y scroll
    padding 5rem 0 0

  @media all and (max-width: 64em)
    display block
    position absolute

  .news-feed
    width 100%
    min-height 0
    height 100vh
    overflow scroll

    @media all and (max-width: 64em)
      height auto

  .news-item
    padding 5rem
    margin 1rem 0
    box-shadow 0 0 16px 2px #efebeb5e
    background white