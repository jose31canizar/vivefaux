.section
  width: 100%
  background: section-color
  display: flex
  justify-content: space-between
  align-items: center
  padding: 200px 0
  height: 100vh

  @media all and (max-width: 1200px)
    flex-direction: column
    height: auto


  .section-title
    display: flex
    justify-content: center
    align-items: center
    margin: 50px 0
    padding-left: 5vw
    @media all and (max-width: 1200px)
      padding-left: 0
