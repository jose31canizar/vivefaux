.layout
  width 100%
  height 100vh

  .notification
    animation fade-in 0.5s
    position fixed
    top 5rem
    right 1rem
    z-index 5
    border-radius 0.2rem
    background-color #2d2b27
    padding 0.25rem 0.79rem
    font-size 0.68rem
    color #ffffff
    font-weight 100

  .background-layer
    background #fafafa
    width 100%
    height 100%
    z-index 1
    position absolute
    top 0
    left 0

  .content
    width 100%
    height 100%
    transition 0.2s ease
    z-index 2
    position fixed
    top 0
    overflow-y scroll
    -webkit-overflow-scrolling auto

  > img
    height 100%
    width 100%
    object-fit cover
    position absolute
    z-index -1
