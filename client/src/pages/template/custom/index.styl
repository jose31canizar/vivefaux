.custom-page
  align-items center

  section
    display flex
    flex-direction column
    align-items center

    .user-list
      width 100%

    .user
      background #fff
      padding 1rem
      margin 1rem 0
      box-shadow 0 0 8px 0 #c7b5b552
      display flex
      align-items center

      .profile-picture
        width 3.5rem
        height 3.5rem
        border-radius 2rem
        background black
        margin-right 1rem

        img
          border-radius 3.5rem